                    </li>

                </ul>
                <ul class="nav navbar-nav ms-auto">

                    @if (User.Identity.Name == "Admin")
                    {

                        <li class="nav-item">
                            @Html.ActionLink("Management", "Index", "Products", new { area = "" }, new { @class = "nav-link" })
                        </li>

                    }


                </ul>
                @Html.Partial("_LoginPartial")
